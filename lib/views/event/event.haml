		var obj = event.target;
		var followed_user_id = $(obj).attr('id').split('-')[3];
		var followed_username = $(obj).attr('id').split('-')[2];
		$.ajax({
			type: "POST",
			url: '/api/update/user/follow',
			data: { followed_id: followed_user_id,
							follower_id: "#{current_user.id}" }
		}).done(function( msg ) {
