.container
	.span9
		.row
			%small= msg.created_at
			%h2= msg.subject
			%a{href: "/user/#{msg.source}/events"}
				#{msg.source}
		.row
			%p= msg.body
		.row
			%hr
		.row.reply-message
			#{partial :'message/create_message', {user: @user, subject: "Re: #{msg.subject}", source: "#{msg.source}", msg_id: "#{msg.id}"}}
		.row
			.btn-group
				%a#add-reply.btn.btn-small
					%i.icon-pencil
					reply


:javascript
	$('#add-reply').click(function () {
		$('.reply-message').toggle();
		$('#add-reply').toggle();
	});
