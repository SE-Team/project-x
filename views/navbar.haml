.navbar.navbar-fixed-top
	.navbar-inner
		.container-fluid
			%a.btn.btn-navbar{ "data-toggle".to_sym => "collapse", "data-target".to_sym => ".nav-collapse"}
				%span.icon-bar
				%span.icon-bar
				%span.icon-bar
				-if logged_in?
					%a.brand{:href => "/user/#{session[:user]}/dashboard"} Project X
				-else
					%a.brand{:href => '/'} Project X
			.nav-collapse
				.btn-group
					%input.search-query.nav-search#search-input{:type => 'text', :placeholder => "Search",}
					%a.btn#search-btn
						%i.icon-search
				%p.navbar-text.pull-right
					-if logged_in?
						%a{:href => "/user/#{session[:user]}/dashboard"} #{session[:user]} 
						%span
							|
						%a{:href => "/logout" } Logout
						
					-else 
						%a{:href => '/login'} Login

:javascript
	$("#search-btn").click(function() {
	  var searchTerm = $("#search-input").val();
	  var msg = "search for: " + searchTerm;
	  window.location.replace("/search/" + encodeURIComponent(searchTerm));
	});

	$('#search-input').keypress(function(e) {
		if(e.which == 13) {
			var searchTerm = $("#search-input").val();
			var msg = "search for: " + searchTerm;
			window.location.replace("/search/" + encodeURIComponent(searchTerm));	
		}
	})
