.container
	%section#content
		%sections#options
			.btn-group#filters.option-set{"data-option-key".to_sym => "filter"}
				%a.btn{href: "#filter", "data-option-value".to_sym => "*"} all
				- categories.each do |cat|
					%a.btn{href: "##{cat}", "data-option-value".to_sym => ".#{cat}"} #{cat}

		%br
		%br

		#isotope-container
			- events.each_with_index do |event, i|
				:plain
					#{render_pane({title: event.title, classes: event.category.name, id: event.id, category: event.category.name, tumbler: event.metadata.tumbler, event_time: event.event_date, img_url: event.img_url})}


	%script{ :type => "text/javascript", :src =>"/js/jquery.isotope.min.js"}
	%script{ :type => "text/javascript", :src =>"/js/user.dash.js"}
